<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/NormalCapsButton</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/NormalCapsButton</item>
    </style>

    <style name="WhiteCheckBox" parent="Theme.AppCompat.Light">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/white</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkNavigation" parent="AppTheme">
        <item name="android:listDivider">@color/gray</item>
    </style>

    <style name="ParameterEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColorHighlight">@color/halfwhite</item>
    </style>

    <style name="NormalCapsButton" parent="Base.Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

</resources>
