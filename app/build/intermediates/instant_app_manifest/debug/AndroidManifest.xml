<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.house4hack.paint3d"
    android:installLocation="auto"
    android:targetSandboxVersion="2"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="za.co.house4hack.paint3d.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>

                <!-- Associate with p3d file extension -->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.p3d" />
                <data android:host="*" />
            </intent-filter>
        </activity>
        <activity android:name="za.co.house4hack.paint3d.spen.SPenActivity" >
        </activity>
        <activity android:name="za.co.house4hack.paint3d.spen.ListActivity" >
        </activity>
        <activity android:name="za.co.house4hack.paint3d.Preferences" >
        </activity>
    </application>

</manifest>